			<text name="select_description">
				選擇來源天空：
			</text>
		</layout_panel>
		<layout_panel name="pnl_traks">
			<radio_group name="track_selection">
				<radio_item label="天空4[ALT]" name="radio_sky4" value="4"/>
				<radio_item label="天空3[ALT]" name="radio_sky3" value="3"/>
